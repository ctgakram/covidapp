@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    var ajaxOpt = new AjaxOptions
    {
        HttpMethod = "GET",
        UpdateTargetId = "dialog1Body",
        InsertionMode = InsertionMode.Replace,
        OnSuccess = "openDialog1('Create New Role')",
        LoadingElementId = "loading",
        OnFailure = "failure"
    };
}
<section id="counter-social-icon" class="utopia-widget utopia-form-box">
    <div class="utopia-widget-title">
        <img class="utopia-widget-icon" src="~/Content/img/icons2/key.png">
        <span>Roles & Rights Management</span>
    </div>
    <div class="row-fluid">
        <div class="utopia-widget-content main-container">
            <div class="row-fluid">
                <div>
                    @Ajax.ActionLink("New Role", "Create", "Role", ajaxOpt, new { @class = "btn btn-success pull-right" })
                </div>
                <table id="gridTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Role
                            </th>
                            <th>Default Page
                            </th>
                            <th>Status
                            </th>
                            <th style="width: 10%"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        </div>
</section>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            var btns = {
                3: false //column number : is button group            
            };

            /*data grid initializer*/
            DataTableBinder($("#gridTable")   //table object
                , '@Url.Content("~/Role/DataGrid")'  //json data url
            , [10, 15]  //record size
            , false //show all with row size
            , null  //additional parameters at query string
            , btns   //buttons are at these columns
            , true
            );

        });
    </script>
}
