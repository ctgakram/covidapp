@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    var ajaxOpt = new AjaxOptions
    {
        HttpMethod = "GET",
        UpdateTargetId = "dialog1Body",
        InsertionMode = InsertionMode.Replace,
        OnSuccess = "openDialog1('Create New Role')",
        LoadingElementId = "loading",
        OnFailure = "failure"
    };
}


<div class="row-fluid">
    <div class="span12">
        <ul class="breadcrumb">
            <li>
                <h2 class="textPrimary"><img src="~/Content/img/icons2/burn_blu-ray2.png" class="utopia-icons2-small-img" style="padding-right:5px;"> Roles & Rights Management</h2>
            </li>
        </ul>

    </div>
</div>
<div class="row-fluid">
    <div>
        @Ajax.ActionLink("Add New Role", "Create", "Role", ajaxOpt, new { @class = "btn btn-primary pull-right" })
    </div>
    <div class="pull-right" style="margin-right:10px;">
        <a href="#" onclick="ReSearch()" class="btn pull-right"><i class="icon icon-search"></i></a>
        @Html.TextBox("txtSearch", null, new { @class = "pull-right", @placeholder = "search text" })
        <script type="text/javascript">
            function ReSearch() {
                $('#gridTable').dataTable().fnDraw();
            }
        </script>
    </div>
</div>

<table id="gridTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Role
            </th>
            <th>
                Default Page
            </th>
            <th>
                Status
            </th>
            <th style="width: 10%"></th>
        </tr>
    </thead>
</table>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            var btns = {
                3: false //column number : is button group
            };

            /*data grid initializer*/
            DataTableBinder($("#gridTable")   //table object
                , '@Url.Content("~/Role/DataGrid")'  //json data url
            , [50, 100]  //record size
            , false //show all with row size
            , null  //additional parameters at query string
            , btns   //buttons are at these columns
            , true
            );

        });
    </script>
}
