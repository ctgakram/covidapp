@model AppProj.Web.Models.UserDistrictModel
@{
    var ajaxOpt = new AjaxOptions
    {
        HttpMethod = "POST",
        UpdateTargetId = "dialog1Body",
        InsertionMode = InsertionMode.Replace,
        OnSuccess = "openDialog1('Districts')",
        LoadingElementId = "loading",
        OnFailure = "failure"
    };
}
<div class="row-fluid">
    <div class="span6">
        <h3 style="color:#33a503">Operating in Districts</h3>
        <table id="gridTableF" class="table table-striped table-bordered">
            <thead>
                @foreach (var row in Model.DistrictByUserProfile)
                {
                    <tr>
                        <th>@row.StandingData.Name</th>
                        <th>
                            @using (Ajax.BeginForm("DistrictsDelete", "UserProfile", ajaxOpt, new { @style = "margin:0 0 0 0" }))
                            {
                                <input type="hidden" id="Id" name="Id" value="@row.Id" />
                                <input type="submit" value="X" class="btn btn-danger" />
                            }
                        </th>
                    </tr>
                }
            </thead>
        </table>
    </div>

    <div class="span6">
        <h3>Add New District</h3>
        <table id="gridTableF" class="table table-striped table-bordered">
            <thead>
                @foreach (var row in Model.RestDistricts)
                {
                    <tr>
                        <th>@row.Name</th>
                        <th>
                            @using (Ajax.BeginForm("DistrictsAdd", "UserProfile", ajaxOpt, new { @style = "margin:0 0 0 0" }))
                            {
                                <input type="hidden" id="Id" name="Id" value="@row.Id" />
                                <input type="hidden" id="UserInfoId" name="UserInfoId" value="@Model.UserInfoId" />
                                <input type="submit" value="Add" class="btn btn-success" />
                            }
                        </th>
                    </tr>
                }
            </thead>
        </table>
    </div>
</div>
<script type="text/javascript">

</script>
