@using AppProj.Web.Helpers;
@using AppProj.Web;
@model IEnumerable<AppProj.Domain.UserProfile>
@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    var ajaxOpt = new AjaxOptions
    {
        HttpMethod = "GET",
        UpdateTargetId = "dialog1Body",
        InsertionMode = InsertionMode.Replace,
        OnSuccess = "openDialog1('Create User')",
        LoadingElementId = "loading",
        OnFailure = "failure"
    };
}

<div class="row-fluid">
    <div class="span12">
        <ul class="breadcrumb">
            <li>
                <h2 class="textPrimary"><img src="~/Content/img/icons2/burn_blu-ray2.png" class="utopia-icons2-small-img" style="padding-right:5px;"> User Management</h2>
            </li>
        </ul>

    </div>
</div>
<div class="row-fluid">
    <div>
        @Ajax.ActionLink("Add New User", "Create", "UserProfile", ajaxOpt, new { @class = "btn btn-primary pull-right" })
    </div>
    <div class="pull-right" style="margin-right:10px;">
        <a href="#" onclick="ReSearch()" class="btn pull-right"><i class="icon icon-search"></i></a>
        @Html.TextBox("txtSearch", null, new { @class = "pull-right", @placeholder = "search text" })
        <script type="text/javascript">
            function ReSearch() {
                $('#myTable').dataTable().fnDraw();
            }
        </script>
    </div>
</div>

<table id="myTable" class="table table-striped table-bordered row-fluid fixed_headers">
    <thead>

        <tr>
            <th>
                PIN
            </th>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Role
            </th>
            <th>
                Status
            </th>
            <th style="width: 100px;"></th>
        </tr>

    </thead>
</table>


@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            //DataTableBinderClient($('#myTable'), [10, 15], false)
            var addPost = {
                'searchText': 'txtSearch'
            }

            var btns = {
                5: true //column number : is button group
            };

            /*data grid initializer*/
            DataTableBinder($("#myTable")   //table object
                , '@Url.Content("~/UserProfile/DataGrid")'  //json data url
            , [50, 100, 200, 1000]  //record size
            , false //show all with row size
            , addPost  //additional parameters at query string
            , btns   //buttons are at these columns
            , true
            );
        });

    </script>
}

