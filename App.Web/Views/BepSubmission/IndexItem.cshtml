@using AppProj.Web.Helpers;
@using AppProj.Web;
@model AppProj.Web.Models.SearchModel
@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    var ajaxOpt = new AjaxOptions
    {
        HttpMethod = "POST",
        UpdateTargetId = "dialog1Body",
        InsertionMode = InsertionMode.Replace,
        OnSuccess = "openDialog1('All Program Data')",
        LoadingElementId = "loading",
        OnFailure = "failure"
    };
}
<section id="counter-social-icon" class="utopia-widget utopia-form-box">
    <div class="utopia-widget-title">
        <img class="utopia-widget-icon" style="margin: 15px 0 0 15px;" src="~/Content/img/icons2/connect.png">
        <span>All Program's Item wise Data</span>
    </div>
    <div class="row-fluid">
        <div class="utopia-widget-content main-container">

            <div class="row-fluid pull-right">
                <div class="row-fluid">
                    <div class="pull-right">
                        @*<a href="#">Total Records: <span id="iTotalRecords"></span></a>*@
                    </div>
                </div>
            </div>

            <div class="row-fluid">
                <div class="span3">
                    <h3 class="pull-left muted font-head">Program: </h3>
                    @Html.DropDownListFor(model => model.ContentTypeId3, Model.ContentTypes3, "All Programs", new { @class = "ddl" })
                </div>
                <div class="span3">
                    <h3 class="pull-left muted font-head">Division: </h3>
                    @Html.DropDownListFor(model => model.ContentTypeId1, Model.ContentTypes1, "All Divisions", new { @class = "ddl" })
                </div>
                <div class="span3">
                    <h3 class="pull-left muted font-head">District: </h3>
                    @Html.DropDownListFor(model => model.ContentTypeId2, Model.ContentTypes2, "All Districts", new { @class = "ddl" })
                </div>
                <div class="span3">
                    <h3 class="pull-left muted font-head">Activities: </h3>
                    @Html.DropDownListFor(model => model.ContentTypeId4, Model.ContentTypes4, "All Activities", new { @class = "ddl" })
                </div>
            </div>

            <div class="row-fluid">
                <div class="span3">
                    <h3 class="pull-left muted font-head">From Date: </h3>
                    @Html.TextBoxFor(model => model.FromDate, "{0:dd MMM, yyyy}", new { @class = "input-small", @placeholder = "Date" })
                </div>
                <div class="span3">
                    <h3 class="pull-left muted font-head">To Date: </h3>
                    @Html.TextBoxFor(model => model.ToDate, "{0:dd MMM, yyyy}", new { @class = "input-small", @placeholder = "Date" })

                </div>
                <div class="span3">
                    <a id="dateSearchButton" class="btn">Material<i class="icon icon-search"></i></a>
                    <a id="dateSearchButtonR" class="btn">Reach<i class="icon icon-search"></i></a>
                    <input type="hidden" id="isR" name="isR" value="false" />
                </div>
                <div class="span3">
                    <a id="exp" href="#" class="btn pull-right">Export</a>
                    <a id="prn" href="#" class="btn pull-right">Print</a>
                </div>
            </div>

            <div id="gridTableDiv">
                <table id="gridTable" class="table table-striped table-bordered fixed_headers">
                    <thead>
                        <tr>
                            <th rowspan="2">Material</th>
                            <th colspan="4">Preparation</th>
                            <th colspan="2">Distribution</th>
                        </tr>
                        <tr>
                            <th>
                                Quantity
                            </th>
                            <th>
                                Distributed
                            </th>
                            <th>
                                Male Staff Count
                            </th>
                            <th>
                                Female Staff Count
                            </th>
                            <th>
                                Quantity
                            </th>
                            <th>
                                Reach Count
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div id="gridTableDivR">
                <table id="gridTableR" class="table table-striped table-bordered fixed_headers">
                    <thead>
                        <tr>
                            <th rowspan="2">
                                Activity
                            </th>
                            <th colspan="2">
                                All (Male/Female/Boy/Girl)
                            </th>
                            <th colspan="2">
                                Male (18 and Above)
                            </th>
                            <th colspan="2">
                                Female (18 and Above)
                            </th>
                            <th colspan="2">
                                Boy (Less than 18)
                            </th>
                            <th colspan="2">
                                Girl (Less than 18)
                            </th>
                            <th colspan="2">
                                PWD
                            </th>
                            <th colspan="2">
                                HHs
                            </th>
                        </tr>
                        <tr>
                            <th>New</th>
                            <th>Old</th>
                            <th>New</th>
                            <th>Old</th>
                            <th>New</th>
                            <th>Old</th>
                            <th>New</th>
                            <th>Old</th>
                            <th>New</th>
                            <th>Old</th>
                            <th>New</th>
                            <th>Old</th>
                            <th>New</th>
                            <th>Old</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script type="text/javascript">
    $(document).ready(function () {

        $('#gridTableDivR').hide();
        $('#gridTableDiv').show();


        $("#prn").click(function () {
            if ($("#gridTable").is(":visible")) {
                $("#gridTable").printThis();
            }
            else {
                $("#gridTableR").printThis();
            }
        });

        $("#exp").click(function () {
            if ($("#gridTable").is(":visible")) {
                tableToExcel('gridTable', 'Export Name');
            }
            else {
                tableToExcel('gridTableR', 'Export Name');
            }
        });

        DatePicker('FromDate', 'dd MMM, yyyy');
        DatePicker('ToDate', 'dd MMM, yyyy');

        $(".ddl").change(function () {
            if ($("#gridTable").is(":visible")) {
                $('#gridTable').dataTable().fnDraw();
            }
            else {
                $('#gridTableR').dataTable().fnDraw();
            }
        });

        $("#dateSearchButton").click(function () {
            $("#isR").val(false);
            $('#gridTableDivR').hide();
            $('#gridTableDiv').show();
            $('#gridTable').dataTable().fnDraw();
        });

        $("#dateSearchButtonR").click(function () {               
            $("#isR").val(true);
            $('#gridTableDivR').show();
            $('#gridTableDiv').hide();
            $('#gridTableR').dataTable().fnDraw();
        });

         $('#ContentTypeId1').change(function (event) {
                LoadDistrictSearch($('#ContentTypeId1').val());
            });


            window.LoadDistrictSearch = function (areaId) {
                var url = '@Url.Content("~/Main/GetDistrictByDivision")?id=' + areaId;
                LoadDropDownListWithCall('ContentTypeId2'
                    , url
                    , 'All Districts'
                    , null);
        }


        var addPost = {
            'ContentTypeId1': 'ContentTypeId1',
            'ContentTypeId2': 'ContentTypeId2',
            'ContentTypeId3': 'ContentTypeId3',
            'ContentTypeId4': 'ContentTypeId4',
            'FromDate': 'FromDate',
            'ToDate': 'ToDate',
            'isR':'isR'
        };
        var btns = {
            //38: false //column number : is button group
        };


            /*data grid initializer*/
        DataTableBinder($('#gridTable')   //table object
                , '@Url.Content("~/BepSubmission/DataGridItem")'  //json data url
                , [100, 200, 1000] //record size
                , true //show all with row size
                , addPost  //additional parameters at query string
                , btns   //buttons are at these columns
                , true
        );

        /*data grid initializer*/
        DataTableBinder($('#gridTableR')   //table object
            , '@Url.Content("~/BepSubmission/DataGridItem")'  //json data url
            , [100, 200, 1000] //record size
            , true //show all with row size
            , addPost  //additional parameters at query string
            , btns   //buttons are at these columns
            , true
        );


        });
    </script>
}
