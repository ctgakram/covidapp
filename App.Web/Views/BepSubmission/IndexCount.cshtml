</div>

@section scripts{
    <script type="text/javascript">
    $(document).ready(function () {

        $('#gridTableDivR').hide();
        $('#gridTableDiv').show();


        $("#prn").click(function () {
            if ($("#gridTable").is(":visible")) {
                $("#gridTable").printThis();
            }
            else {
                $("#gridTableR").printThis();
            }
        });

        $("#exp").click(function () {
            if ($("#gridTable").is(":visible")) {
                tableToExcel('gridTable', 'Export Name');
            }
            else {
                tableToExcel('gridTableR', 'Export Name');
            }
        });

        DatePicker('FromDate', 'dd MMM, yyyy');
        DatePicker('ToDate', 'dd MMM, yyyy');

        $(".ddl").change(function () {
            if ($("#gridTable").is(":visible")) {
                $('#gridTable').dataTable().fnDraw();
            }
            else {
                $('#gridTableR').dataTable().fnDraw();
            }
        });

        $("#dateSearchButton").click(function () {
            $("#isR").val(false);
            $('#gridTableDivR').hide();
            $('#gridTableDiv').show();
            $('#gridTable').dataTable().fnDraw();
        });

        $("#dateSearchButtonR").click(function () {
            $("#isR").val(true);
            $('#gridTableDivR').show();
            $('#gridTableDiv').hide();
            $('#gridTableR').dataTable().fnDraw();
        });

         $('#ContentTypeId1').change(function (event) {
                LoadDistrictSearch($('#ContentTypeId1').val());
            });


            window.LoadDistrictSearch = function (areaId) {
                var url = '@Url.Content("~/Main/GetDistrictByDivision")?id=' + areaId;
                LoadDropDownListWithCall('ContentTypeId2'
                    , url
                    , 'All Districts'
                    , null);
        }


        var addPost = {
            'ContentTypeId1': 'ContentTypeId1',
            'ContentTypeId2': 'ContentTypeId2',
            'ContentTypeId3': 'ContentTypeId3',
            'ContentTypeId4': 'ContentTypeId4',
            'FromDate': 'FromDate',
            'ToDate': 'ToDate',
            'isR':'isR'
        };
        var btns = {
            //38: false //column number : is button group
        };


            /*data grid initializer*/
        DataTableBinder($('#gridTable')   //table object
                , '@Url.Content("~/BepSubmission/DataGridCount")'  //json data url
                , [100, 200, 1000] //record size
                , true //show all with row size
                , addPost  //additional parameters at query string
                , btns   //buttons are at these columns
                , true
        );

        /*data grid initializer*/
        DataTableBinder($('#gridTableR')   //table object
            , '@Url.Content("~/BepSubmission/DataGridCount")'  //json data url
            , [100, 200, 1000] //record size
            , true //show all with row size
            , addPost  //additional parameters at query string
            , btns   //buttons are at these columns
            , true
        );


        });
    </script>
}
