@model AppProj.Web.Models.LogOnModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>COVID-19 Response</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    @Styles.Render("~/Content/styles")
    @Scripts.Render("~/bundles/jquery")
</head>



<body>

    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <div class="utopia-login-message">
                    <h1>COVID-19 Response</h1>
                    <p>Sign in to get access</p>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <div class="row-fluid">
                    <div class="span6">
                        <div class="utopia-login-info">
                            <img src="~/Content/img/login.png" alt="image">
                        </div>
                    </div>

                    <div class="span6">
                        <div class="utopia-login">
                            <h1>User Access</h1>
                            <form action="Login" method="post" class="utopia">
                                <input type="hidden" name="site" id="site" value="@AppProj.Web.Helpers.SsoUtility.Site" />
                                <label>Username:</label>
                                @Html.TextBoxFor(m => m.user, new { id = "UserName", @placeholder = "user name", @class = "span12 utopia-fluid-input" })

                                <label>Password:</label>
                                @Html.PasswordFor(m => m.password, new { @id = "Password", @placeholder = "Password", @class = "span12 utopia-fluid-input " })

                                <ul class="utopia-login-action">
                                    <li>
                                        <input type="submit" class="btn span4" value="Login">
                                    </li>
                                </ul>
                            </form>
                            @RenderSection("featured", required: false)
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/utopia")
    @RenderSection("scripts", required: false)

</body>
</html>
<script type="text/javascript">
    $(document).ready(function () {

    });

</script>
