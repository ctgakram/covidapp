@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    var ajaxOpt = new AjaxOptions
    {
        HttpMethod = "GET",
        UpdateTargetId = "dialog1Body",
        InsertionMode = InsertionMode.Replace,
        OnSuccess = "openDialog1('Add/Edit')",
        LoadingElementId = "loading",
        OnFailure = "failure"
    };
}


<div class="row-fluid">
    <div class="span12">
        <ul class="breadcrumb">
            <li>
                <h2 class="textPrimary"><img src="~/Content/img/icons2/burn_blu-ray2.png" class="utopia-icons2-small-img" style="padding-right:5px;"> List of @ViewBag.Title</h2>
            </li>
        </ul>

    </div>
</div>

<table id="gridTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @ViewBag.Title
            </th>
            @*<th>
                    Details
                </th>*@
            <th>
                Status
            </th>
        </tr>
    </thead>
</table>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            var btns = {
                //2: true //column number : is button group
            };

            /*data grid initializer*/
            DataTableBinder($("#gridTable")   //table object
                , '@Url.Content("~/StandingView/DataGrid")'  //json data url
            , [50, 100]  //record size
            , false //show all with row size
            , null  //additional parameters at query string
            , btns   //buttons are at these columns
            , true
            );

        });
    </script>
}
